@startuml ThesisManagementAPI-ComponentDiagram

title Thesis Management API - Component Diagram

!theme vibrant

package "Presentation Layer" {
    [API Controllers] as Api
    note right of Api
        - AuthController
        - UserController
        - TutorController
        - TopicController
        - ThesisController
    end note
}

package "Business Logic Layer" {
    [Services] as Business
    note right of Business
        - IUserBusinessLogicService
        - IThesisService
        - ITopicService
    end note
}

package "Data Access Layer" {
    [Repositories / DbContext] as Data
    note right of Data
        - ThesisDbContext
    end note
}

database "Thesis Database" as DB

[External Application] ..> Api : HTTP/S Requests

Api -> Business : In-memory calls
Business -> Data : In-memory calls
Data -> DB : Database queries (SQL)

@enduml
